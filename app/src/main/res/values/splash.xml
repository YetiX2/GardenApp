<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Устанавливаем фон загрузочного экрана -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- Используем "обертку", чтобы избежать обрезки -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- Указываем тему, в которую переключится приложение после загрузки -->
        <item name="postSplashScreenTheme">@style/Theme.GardenApp</item>
    </style>
</resources>
